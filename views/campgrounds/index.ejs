<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<a class="btn btn-success" href="/campgrounds/new">New Campground</a>

<div class="container py-4">
  <div class="row row-cols-4 justify-content-around row-gap-4">
    <% campgrounds.map((campground)=> {%>
    <div class="card col" style="width: 18rem;">
      <img src="<%= campground.image %>" class="card-img-top pt-3" alt="...">
      <div class="card-body">
        <h3><%= campground.title %></h2>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <small class="text-muted">
              <%= campground.location %>
            </small>
          </p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">See Details</a>
      </div>
    </div>
    <%  })%>
  </div>
</div>